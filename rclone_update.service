[Unit]
Description=RClone Service
Wants=network-online.target
After=multi-user.target

[Service]
Type=simple
KillMode=none

ExecStartPre=/bin/mkdir -p /storage/update/
ExecStart=/storage/.config/rclone/rclone mount update:update /storage/update/ --config /storage/.config/rclone/rclone.conf \
		--allow-other \
		--allow-non-empty \
		--read-only \
		--vfs-cache-mode writes
ExecStop=/bin/fusermount -uz /storage/update/
Restart=on-abort

[Install]
WantedBy=multi-user.target
